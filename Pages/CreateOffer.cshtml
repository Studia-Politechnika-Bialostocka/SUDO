@page
@model SUDO.Pages.CreateOfferModel
@{
}

<div>
    <h1 class="display-4">Create an Offer</h1>
    <form method="post">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-floating">
            <input asp-for="Offer.Destination" class="form-control" placeholder="Destination"/>
            <label class="text-muted" for="destination ">Destination</label>
        </div>

        <div class="form-floating">
            <input asp-for="Offer.MaxPassengerCount" class="form-control" min="1" max="8" placeholder="Maximum passengers"/>
            <label class="text-muted" for="passengerCount ">Maximum passengers</label>
        </div>

        <div class="form-check form-switch">
            <input asp-for="Offer.Departure" class="form-control" id="Departure" checked>
            <label class="form-check-label" for="Departure"> Departure </label>
        </div>

        <div class="form-check form-switch">
            <input asp-for="Offer.Arrival" class="form-control" id="Arrival" checked>
            <label class="form-check-label" for="Arrival"> Arrival </label>
        </div>

        <div class="form-check form-switch">
            <input asp-for="Offer.NonSmoking" class="form-check-input" id="nonSmoking" checked>
            <label class="form-check-label" for="nonSmoking"> Non Smoking </label>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text">$</span>
            <input asp-for="Offer.Cost" type="number" class="form-control" step=".01">
        </div>

        <button type="submit" class="btn btn-primary">submit</button>
    </form>
</div>